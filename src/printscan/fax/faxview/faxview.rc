IDB_TOOLBAR TOOLBAR DISCARDABLE  30,28
BEGIN
    BUTTON      IDM_FILEOPEN
    BUTTON      IDM_PRINT
    BUTTON      IDM_PAGE_UP
    BUTTON      IDM_PAGE_DOWN
END
