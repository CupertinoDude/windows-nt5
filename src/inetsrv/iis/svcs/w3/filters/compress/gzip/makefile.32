all:    gzip.dll


CFLAGS    = -Gz -Gs -GD -MT -W3 -O2 -Zp8 -c

.c.obj:
        cl $(CFLAGS) -Fo$*.obj $*.c

.c.gbj:
        cl $(CFLAGS) -Fo$*.gbj /DBUILDING_GZIP $*.c


LINK_FLAGS = /dll /machine:I386 /nodefaultlib /incremental:no /noentry /nologo

LINK_LIBS = kernel32.lib msvcrt.lib

GZIP_OBJ_FILES = \
    comninit.obj \
    definit.obj \
    deflate.obj \
    deftree.obj \
    defmisc.obj \
    optenc.obj \
    optblock.obj \
    optfmtch.obj \
    fstenc.obj \
    stdenc.obj \
    infinit.obj \
    infinput.obj \
    infstatic.obj \
    infdyna.obj \
    inflate.obj \
    infuncmp.obj \
    inftree.obj \
    maketbl.obj \
    output.obj \
    gzip.obj \
    stdblock.obj \
    fstdebug.obj \
    optdebug.obj \
    stddebug.obj \
    api.obj


gzip.dll: $(GZIP_OBJ_FILES) 
        @if exist $@ del $@
        link $(LINK_FLAGS) /def:gzip.def /out:$@ $** $(LINK_LIBS)



