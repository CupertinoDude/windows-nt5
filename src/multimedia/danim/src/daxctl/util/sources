#
# REMIND : If we're not on 386, use MSVCRT and undef USE_LIBCMT. If we're on 386,
#         use LIBCMT and undef USE_MSVCRT
#
!if !$(386)
!undef USE_LIBCMT
USE_MSVCRT=1
LINKLIBS = $(SDK_LIB_PATH)\msvcrt.lib
!else
USE_NOLIBS=1
USE_LIBCMT=1
!undef USE_MSVCRT
LINKLIBS=$(SDK_LIB_PATH)\libcmt.lib $(LINKLIBS)
!endif

