NT_COMPONENT = 1                # This ships with NT5
ROOT=$(MAKEDIR:\src\time\dll=)

DO_NOT_USE_EH=1

!include $(ROOT)\src\time\time.inc

TARGETNAME=datime
TARGETPATH=$(SDKDIR_DEST)
TARGETTYPE=DYNLINK

DLLDEF=$(O)\datime.def
DLLENTRY=_TIMEDllMainStartup
