INCLUDES=$(DATIME_INC_DIRS)

USE_STL=1

#
# Pulls in _WndProcThunkProc for IA64
#

USE_STATIC_ATL=1


!if !$(FREEBUILD)
LINKER_NOREF=1
!endif

SOURCES= \
    main.cpp \
    stdafx.cpp \
    oleobj.cpp \
    init.cpp

DELAYLOAD=danim.dll

TARGETLIBS= \
