           $(_NTBINDIR)\public\sdk\lib\*\uuid.lib               \
           $(_NTBINDIR)\public\sdk\lib\*\comdlg32.lib           \
           $(_NTBINDIR)\public\sdk\lib\*\oleaut32.lib           \
           $(_NTBINDIR)\public\sdk\lib\*\ole32.lib              \
           $(SDKLIBS)                                           \
           $(QUARTZ)\lib\*\quartz.lib                           \
           $(TESTTREE)\lib\*\tstshell.lib                       \
