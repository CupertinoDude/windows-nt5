DVR_ROOT        = ..

ROOT		    =$(PROJECT_ROOT)\dshow
DISABLE_PCH     = 1
!include $(ROOT)\common.inc

TARGETNAME      = sbe
TARGETPATH      = obj
TARGETTYPE      = DYNLINK
TARGETEXT       = dll
DLLDEF          = sbe.def

WMSDK_LOC       = $(DVR_ROOT)\wmsdk

WMSDK_LIB_LOC   = $(WMSDK_LOC)\lib\free\i386

