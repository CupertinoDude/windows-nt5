MAJORCOMP=DVR
MINORCOMP=DVRio

TARGETNAME=dvrval
TARGETTYPE=PROGRAM
TARGETPATH=obj

UMTYPE=console
UMENTRY=wmain

DVR_ROOT        = ..
WMSDK_LOC       = $(DVR_ROOT)\wmsdk

!if $(FREEBUILD)
WMSDK_LIB_LOC   = $(WMSDK_LOC)\lib\free
!else
WMSDK_LIB_LOC   = $(WMSDK_LOC)\lib\checked
!endif

INCLUDES        =               \
    $(WMSDK_LOC)\inc            \
     .;                         \
    $(DVR_ROOT)\inc;            \
    $(DVR_ROOT)\idl\$(O);       \
    $(INCLUDES)

!if !$(FREEBUILD)
C_DEFINES=$(C_DEFINES) -DDEBUG
LINKER_NOICF      = 1           # ICF is s-l-o-w
!endif

USE_MSVCRT=1

# USE_NTDLL=1


SOURCES=                                \
        dvrval.cpp  

LINKLIBS        =                                                       \
    $(DVR_ROOT)\idl\$(O)\dvridl.lib                                     \
    $(DVR_ROOT)\dvrio\$(O)\dvrio.lib                                    


TARGETLIBS      =                   \
    $(TARGETLIBS)                   \
    $(SDK_LIB_PATH)\kernel32.lib    \
    $(SDK_LIB_PATH)\ole32.lib    \
    $(SDK_LIB_PATH)\ntdll.lib       \
    $(SDK_LIB_PATH)\user32.lib      \
    $(SDK_LIB_PATH)\uuid.lib        \
    $(WMSDK_LIB_LOC)\WMVdvrC.lib    \
    $(WMSDK_LIB_LOC)\dvrsink.lib
