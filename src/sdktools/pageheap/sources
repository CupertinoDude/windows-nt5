LINKER_STACKSIZE=-stack:0x100000,0x6000
!else
LINKER_STACKSIZE=-stack:0x100000,0x3000
!endif

UMTYPE=console
USE_MSVCRT=1
USE_NATIVE_EH=1

C_DEFINES = -DWIN32 -DNT #-D_UNICODE

