TARGETNAME=gflags
TARGETPATH=obj
TARGETTYPE=PROGRAM

SOURCES=gflags.cxx gflags.rc

UMTYPE=console

USE_MSVCRT=1
USE_NATIVE_EH=1

!if $(IA64)
LINKER_STACKSIZE=-stack:0x100000,0x6000
!else
LINKER_STACKSIZE=-stack:0x100000,0x3000
!endif

TARGETLIBS=$(SDK_LIB_PATH)\ntdll.lib    \
           $(SDK_LIB_PATH)\user32.lib

NTTARGETFILES=$(O)\gflags.res

