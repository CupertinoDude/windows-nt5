    IDS_MESSAGE_LOG_TSV      "     %1!s! (TSV)\n"
    IDS_MESSAGE_LOG_BINARY   "     %1!s! (Binary)\n"
    IDS_MESSAGE_LOG_PERFMON  "     %1!s! (Windows NT)\n"

    IDS_MESSAGE_BADFILES     "Error: To relog multiple files all files must be in binary format.\n"
