    $(SDK_LIB_PATH)\user32.lib   \
    $(ADMIN_LIB_PATH)\mprui.lib  \
    $(SDK_LIB_PATH)\credui.lib

UMLIBS=\
    $(O)\mpr.lib \
    $(SDK_LIB_PATH)\ntdll.lib

INCLUDES= $(BASE_INC_PATH);  \
          $(SHELL_INC_PATH); \
          $(DS_INC_PATH)

