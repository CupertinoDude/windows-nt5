MAJORCOMP=tscert
MINORCOMP=tscrtini

TARGETNAME=tscrtini
TARGETPATH=obj
TARGETTYPE=UMAPPL_NOLIB

SOURCES=tscrtini.c \
        tscrtini.rc

INCLUDES=..\inc; \

!IFDEF NTDEBUG
!IFDEF NOMEMLEAK
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DUNICODE=1
!ELSE
!IFDEF STACK_TRACE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DMEMLEAK -DSTACK_TRACE -DUNICODE=1
!ELSE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DMEMLEAK -DUNICODE=1
!ENDIF
!ENDIF
!ELSE   # NTDEBUG
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=0 -DUNICODE=1
!ENDIF  # NTDEBUG

C_DEFINES=$(C_DEFINES) -DHYDRA_CERT=1

UMLIBS=$(SDK_LIB_PATH)\advapi32.lib \
       $(SDK_LIB_PATH)\imagehlp.lib \
       $(SDK_LIB_PATH)\ntdll.lib


UMRES=obj\*\tscrtini.res
UMAPPLEXT=.exe
UMAPPL=tscrtini
UMTYPE=console


