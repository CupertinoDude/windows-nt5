MAJORCOMP=ulm
MINORCOMP=cnvrtuc

TARGETNAME=cnvrtuc
TARGETPATH=obj
TARGETTYPE=UMAPPL_NOLIB

NTDEBUG=ntsd
NTDEBUGTYPE=windbg
MSC_OPTIMIZATION=/Od
#NTDEBUGTYPE=both

SOURCES=cnvrtuc.c \
        cmdline.c \
        cnvrtuc.rc

INCLUDES=..\inc;

!IFDEF NTDEBUG
!IFDEF NOMEMLEAK
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DUNICODE=1
!ELSE
!IFDEF STACK_TRACE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DMEMLEAK -DSTACK_TRACE -DUNICODE=1
!ELSE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=1 -DMEMLEAK -DUNICODE=1
!ENDIF
!ENDIF
!ELSE   # NTDEBUG
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DDBG=0 -DUNICODE=1
!ENDIF  # NTDEBUG

UMLIBS=obj\*\cmdline.obj \
       ..\utilsub\obj\*\utilsub.lib \
       $(TERMSRV_LIB_PATH)\regapi.lib \
       $(SDK_LIB_PATH)\user32.lib \
       $(SDK_LIB_PATH)\netapi32.lib \
       $(SDK_LIB_PATH)\ntdll.lib


UMRES=obj\*\cnvrtuc.res
