

$msi_h = @ARGV[0];
$msierror_h = @ARGV[1];

open(INFILE,$msi_h) || die "Could not open file $msi_h";
open(OUTFILE,">$msierror_h") || die "Could not open file $msierror_h";

$printlines = 0;

while($_ = <INFILE>)
{
	if(/LOCALIZE BEGIN/)
	{
		$printlines = 1;
	}
	elsif (/LOCALIZE END/)
	{
		$printlines = 0;
	}
	elsif(m@#define (ERROR_\w+)\s+(\d+)[\s|L]+//\s*(.*)@)
	{
		if ($printlines)
		{
			printf OUTFILE "%s \"%s\"\n", $1, $3;
		}
	}
}