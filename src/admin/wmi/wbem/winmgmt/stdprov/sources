	provperf.CPP \
	provreg.CPP \
	STDPROV.CPP \
	regmethods.cpp \
	regcrc.cpp \
	regereq.cpp \
	regeprov.cpp \
	crc32.cpp

# Next, specify options for the compiler using C_DEFINES.
C_DEFINES=$(C_DEFINES) /DBUILDING_DLL /D_WINDLL /D__WINNT_BUILD__ /D_UNICODE /DUNICODE
WIN32_WINNT_VERSION=0x0500
USER_C_FLAGS=/EHa
DLLDEF=$(O)\stdprov.def
