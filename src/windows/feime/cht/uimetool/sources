SOURCES= \
         Winmain.C  \
         UIMETOOL.C  \
         Uimetool.RC

UMTYPE=windows
       
UMLIBS=$(SDK_LIB_PATH)\comdlg32.lib \
       $(SDK_LIB_PATH)\shell32.lib  \
       $(SDK_LIB_PATH)\imm32.lib    \
       $(SDK_LIB_PATH)\comctl32.lib \
       $(SDK_LIB_PATH)\advapi32.lib \
       $(SDK_LIB_PATH)\htmlhelp.lib 

UMRES=
