MAJORCOMP=Calais
MINORCOMP=SCardSvr

TARGETNAME=$(MINORCOMP)
TARGETPATH=obj
TARGETTYPE=PROGRAM

NTTARGETFILE0=$(O)\scardmsg.rc

USE_MSVCRT=1

TARGETLIBS=\
    $(SECURITY_LIB_PATH)\CalaisLb.lib \
    $(SECURITY_LIB_PATH)\CalComm.lib  \
    $(SECURITY_LIB_PATH)\CalSvrLb.lib \
    $(SDK_LIB_PATH)\user32.lib     \
    $(SDK_LIB_PATH)\ntdll.lib      \
    $(SDK_LIB_PATH)\setupapi.lib

INCLUDES=\
    $(O); \
    ..\..\inc; \
    ..\..\Server\inc; \
    ..\..\Server\Server;

PASS0_HEADERDIR=$(O)
PASS0_SOURCEDIR=$(O)

SOURCES= \
	$(MINORCOMP).cpp \
	$(MINORCOMP).rc \
        scardmsg.mc  \
        scappdev.cpp

# Make it a console application
UMTYPE=console
UMENTRY=main

# Use C++ Exception Handling
USE_NATIVE_EH=1

# Delay Load the following libraries
DELAYLOAD=advapi32.dll;user32.dll
