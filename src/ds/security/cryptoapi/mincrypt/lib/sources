!IF "$(CRYPT_USE_DEBUG_CRTS)"!=""
DEBUG_CRTS=1
!ENDIF

!IF "$(CRYPT_USE_WARNING_LEVEL_W4)"!=""
MSC_WARNING_LEVEL=/W4
!ENDIF

