MAJORCOMP=mincrypt
MINORCOMP=mincrypt

TARGETNAME=$(MINORCOMP)
TARGETPATH=$(SECURITY_LIB_DEST)
TARGETTYPE=LIBRARY

PRECOMPILED_INCLUDE = global.hxx
