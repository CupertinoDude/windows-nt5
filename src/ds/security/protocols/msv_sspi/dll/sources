            $(SECURITY_LIB_PATH)\lsaitf.lib \
            $(SDK_LIB_PATH)\kernel32.lib    \
            $(SDK_LIB_PATH)\rpcutil.lib     \
            $(SDK_LIB_PATH)\samlib.lib      \
            $(SDK_LIB_PATH)\lsasrv.lib      \
            $(SDK_LIB_PATH)\advapip.lib     \
            $(DS_LIB_PATH)\netapi32p.lib    \
