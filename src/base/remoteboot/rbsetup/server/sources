TARGETNAME=     risetup
TARGETPATH=     obj
TARGETTYPE=     PROGRAM

LINKER_STACKCOMMITSIZE=65536


PRECOMPILED_CXX= 1
PRECOMPILED_INCLUDE= pch.h

UMTYPE=         windows
UMENTRY=        ModuleEntry
UMENTRYABS=     ModuleEntry

# on Alpha the call to CopyMemory is mapped to c-runtime
# and needs otsmove which is from c-runtime libraries.
# the below is needed for alpha.
!IF $(386)
USE_NOLIBS=     1
!ELSE
USE_MSVCRT= 1
!ENDIF

TARGETLIBS= \
        $(SDK_LIB_PATH)\ntdll.lib       \
        $(SDK_LIB_PATH)\kernel32.lib    \
        $(SDK_LIB_PATH)\shell32.lib     \
        $(SDK_LIB_PATH)\user32.lib      \
        $(SDK_LIB_PATH)\comctl32.lib    \
        $(BASE_LIB_PATH)\spapip.lib     \
        $(SDK_LIB_PATH)\advapi32.lib    \
        $(SDK_LIB_PATH)\advpack.lib     \
        $(SDK_LIB_PATH)\netapi32.lib    \
        $(SDK_LIB_PATH)\ole32.lib       \
        $(SDK_LIB_PATH)\shlwapi.lib     \
        $(SDK_LIB_PATH)\version.lib     \
        $(SDK_LIB_PATH)\wldap32.lib     \
        $(SDK_LIB_PATH)\wsock32.lib     \
        $(SDK_LIB_PATH)\secur32.lib     \
        $(SDK_LIB_PATH)\comdlg32.lib    

INCLUDES= \
        $(ADMIN_INC_PATH);\
        $(WINDOWS_INC_PATH);\
        $(NET_INC_PATH);\

SOURCES=    \
        automate.cpp \
        check.cpp   \
        main.cpp    \
        debug.cpp   \
        utils.cpp   \
        dialogs.cpp \
        dhcp.cpp    \
        setup.cpp   \
        resource.rc
        
MISCFILES=  \
        reminst.sld
